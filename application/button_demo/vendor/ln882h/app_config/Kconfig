menu "AIIO_GPIO_CFG"
choice GPIO_BUTTON_PORT
   	bool "aiio_GPIO_BUTTON_PORT"
   	default GPIO_BUTTON_PORTB
config GPIO_BUTTON_PORTA
   	bool "AIIO_GPIO_A"
config GPIO_BUTTON_PORTB
   	bool "AIIO_GPIO_B"
endchoice
config GPIO_BUTTON_PORT
    	string
    	default AIIO_GPIO_A if GPIO_BUTTON_PORTA
    	default AIIO_GPIO_B if GPIO_BUTTON_PORTB
choice GPIO_BUTTON_PIN
   	bool "aiio_GPIO_BUTTON_PIN"
   	default GPIO_BUTTON_PIN4
