config GPIO_BUTTON_PIN14
   	bool "AIIO_GPIO_NUM_14"
config GPIO_BUTTON_PIN15
   	bool "AIIO_GPIO_NUM_15"
endchoice
config GPIO_BUTTON_PIN
    	string
    	default AIIO_GPIO_NUM_0   if GPIO_BUTTON_PIN0
    	default AIIO_GPIO_NUM_1   if GPIO_BUTTON_PIN1
        default AIIO_GPIO_NUM_2   if GPIO_BUTTON_PIN2
        default AIIO_GPIO_NUM_3   if GPIO_BUTTON_PIN3
        default AIIO_GPIO_NUM_4   if GPIO_BUTTON_PIN4
